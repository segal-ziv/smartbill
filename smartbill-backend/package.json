{
  "name": "smartbill-backend",
  "version": "1.0.0",
  "description": "SmartBill Backend - Document Management & OCR Processing",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "start:worker:ocr": "node dist/queues/workers/ocrWorker.js",
    "start:worker:ingestion": "node dist/queues/workers/ingestionWorker.js",
    "start:worker:export": "node dist/queues/workers/exportWorker.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "worker:ocr": "tsx src/queues/workers/ocrWorker.ts",
    "worker:ingestion": "tsx src/queues/workers/ingestionWorker.ts",
    "worker:export": "tsx src/queues/workers/exportWorker.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "backend",
    "ocr",
    "invoice",
    "document-management"
  ],
  "author": "SmartBill Team",
  "license": "ISC",
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/imap": "^0.8.42",
    "@types/mailparser": "^3.4.6",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.10.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "prisma": "^6.19.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@clerk/express": "^1.5.0",
    "@clerk/nextjs": "^6.35.1",
    "@google-cloud/vision": "^5.3.4",
    "@prisma/client": "^6.19.0",
    "@supabase/supabase-js": "^2.81.1",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bullmq": "^5.63.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "form-data": "^4.0.4",
    "googleapis": "^166.0.0",
    "imap": "^0.8.19",
    "ioredis": "^5.8.2",
    "mailparser": "^3.9.0",
    "multer": "^1.4.5-lts.1",
    "next": "^16.0.2",
    "zod": "^4.1.12"
  }
}
